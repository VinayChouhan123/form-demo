<h1>Product Lists</h1>

<table width="30%">
	<thead>
		<tr>
			<th>ID</th>
			<th>Product</th>
			<th>Description</th>
			<th>Color</th>
			<th>Size</th>
		</tr>
	</thead>
	<tbody>
		<% @productvarients.each do |i| %>
			<tr>
				<td><%= i.id %></td>
				<td><%= i.product.name %></td>
				<td><%= i.product.description %></td>
				<td><%= i.color %></td>
				<td><%= i.size %></td>
			</tr>
		<% end %>
	</tbody>
</table><br>

<%= link_to "Add Product", new_product_path(@product) %>

